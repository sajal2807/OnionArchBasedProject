@model IEnumerable<OA.Web.Models.UserViewModel>
@{
    ViewData["Title"] = "Tabulator";
}


<link href="https://unpkg.com/tabulator-tables@4.6.3/dist/css/tabulator.min.css" rel="stylesheet">
<script type="text/javascript" src="https://unpkg.com/tabulator-tables@4.6.3/dist/js/tabulator.min.js"></script>



<head>
    <title>Tabulator example</title>
</head>
<body>
    <div id="example-table"></div>

    <script>
            var table = new Tabulator("#example-table", {
            layout: "fitData",
            height: "100%",
            layout: "fitColumns",
            pagination: "local",
            paginationSize: 20,
            paginationSizeSelector: [20, 40, 60, 80],
            columns: [
                { title: "Name", field: "name", frozen: true},
                { title: "Email", field: "email" },
                { title: "Address", field: "address" },
                { title: "AddedDate", field: "doj" },
            ],
        });
    </script>
</body>